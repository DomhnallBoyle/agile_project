<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CSC3045_CS2.Resources.Styles">

    <!-- Format is define a Color, with the hexcode, and then create the SolidColorBrush set to use the Color as a StaticResource -->
    <!-- You use the ColorBrush to get access to the colour and apply it to various components -->

    <Color x:Key="ButtonBackground">#ad9f75</Color>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackground}" />

    <Color x:Key="ButtonHover">#ddecec</Color>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHover}" />

    <Color x:Key="ButtonForeground">#000000</Color>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForeground}" />

    <Color x:Key="TextColour">#cdcdcd</Color>
    <SolidColorBrush x:Key="TextColourBrush" Color="{StaticResource TextColour}" />

</ResourceDictionary>