<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CSC3045_CS2.Resources.Styles">

    <!-- Format is define a Color, with the hexcode, and then create the SolidColorBrush set to use the Color as a StaticResource -->
    <!-- You use the ColorBrush to get access to the colour and apply it to various components -->

    <Color x:Key="DarkGray">#c9c9c9</Color>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>

    <Color x:Key="LightGray">#e3e3e3</Color>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>

    <Color x:Key="LightBlue">#0099ff</Color>
    <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlue}"/>

    <Color x:Key="BrightBlue">#66b2ff</Color>
    <SolidColorBrush x:Key="BrightBlueBrush" Color="{StaticResource BrightBlue}"/>



    <Color x:Key="DarkBlue">#113953</Color>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>

    <Color x:Key="Red">#ff6666</Color>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>

    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0.5,0" EndPoint="0.5,1.5">
        <GradientStop Color="{StaticResource DarkBlue}" Offset="0"/>
        <GradientStop Color="{StaticResource LightBlue}" Offset="0.5"/>
    </LinearGradientBrush>
    
</ResourceDictionary>