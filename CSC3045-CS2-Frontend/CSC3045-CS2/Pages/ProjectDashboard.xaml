<Page x:Class="CSC3045_CS2.Pages.ProjectDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSC3045_CS2.Pages"
      mc:Ignorable="d"
      Background="{StaticResource LightBlueBrush}"
      d:DesignHeight="100" d:DesignWidth="100"
      x:Name="Page"
      Title="ProjectDashboard" Height="500" Width="500">
    
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Page.Resources>
    
    <Grid Margin="10,0,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name="ProjectDropDownButton" Grid.Column="1" Grid.Row="0" Content="Click Me" Command="{Binding ProjectDropDown}" ContextMenuService.IsEnabled="False">
            <Button.ContextMenu>
                <ContextMenu Name="projectMenuItems">
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <TextBlock Grid.Row="1" Text="Project Team Members" TextAlignment="Center" FontWeight="Bold" FontSize="16" Margin="10"></TextBlock>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="User Dashboard" Command="{Binding GoToUserDashboardCommand}"/>
            <Button Grid.Column="1" Content="Manage Project Team"
                    Command="{Binding GoToAddTeamMemberCommand}"
                    Visibility="{Binding Path=Permissions.Manager, Converter={StaticResource BoolToVisConverter}}"/>
            <Button Grid.Column="2" Content="Product Backlog"
                    Command="{Binding GoToProductBacklogCommand}"/>
        </Grid>

        <TextBlock Grid.Row="3" Text="Project Manager" TextAlignment="Left" FontWeight="Bold" FontSize="16" Margin="10"></TextBlock>

        <Separator  Grid.Row="4" ></Separator>
        <TextBlock Grid.Row="5" TextAlignment="Left" FontWeight="Bold" FontSize="14">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} {1}">
                    <Binding Path="SelectedProject.Manager.Forename"/>
                    <Binding Path="SelectedProject.Manager.Surname"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <TextBlock Grid.Row="5" Text="{Binding SelectedProject.Manager.Email, FallbackValue=''}" TextAlignment="Center" FontWeight="Bold" FontSize="12"></TextBlock>
        
        <Separator  Grid.Row="6" ></Separator>

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Scrum Masters" TextAlignment="Center" FontWeight="Bold" FontSize="14"></TextBlock>
                <ListBox Name="ProjectScrumMasters" ItemsSource="{Binding SelectedProject.ScrumMasters}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button Content="Remove"
                                        Command="{Binding ElementName=Page, Path=DataContext.RemoveScrumMasterCommand}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding ElementName=Page, Path=Permissions.Manager, Converter={StaticResource BoolToVisConverter}}"/>
                                <TextBlock TextAlignment="Center" FontSize="12">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Forename"/>
                                            <Binding Path="Surname"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock Text="{Binding Email, FallbackValue=''}" TextAlignment="Center" FontSize="12"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Product Owner" TextAlignment="Center" FontWeight="Bold" FontSize="14"></TextBlock>
                <TextBlock TextAlignment="Center" FontSize="12">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="SelectedProject.ProductOwner.Forename" Mode="OneWay"/>
                            <Binding Path="SelectedProject.ProductOwner.Surname" Mode="OneWay"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <TextBlock Text="{Binding SelectedProject.ProductOwner.Email, Mode=OneWay, FallbackValue=''}" TextAlignment="Center" FontSize="12"></TextBlock>
            </StackPanel>
        </Grid>
        
        <Separator  Grid.Row="8" ></Separator>

        <TextBlock Grid.Row="9" Text="Project Team Members" TextAlignment="Left" FontWeight="Bold" FontSize="16" Margin="10"></TextBlock>

        <ListBox Grid.Row="10" Name="ProjectTeamMembers" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Grid.Column="0" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="Forename"/>
                                    <Binding Path="Surname"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <Separator/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.75*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Email}" Margin="10" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Visibility="{Binding Roles.Developer, Converter={StaticResource BoolToVisConverter}}">
                                <TextBlock Text="Developer" HorizontalAlignment="Left" FontWeight="Bold" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Visibility="{Binding Roles.ScrumMaster, Converter={StaticResource BoolToVisConverter}}">
                                <TextBlock Text="Scrum Master" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                <Button Content="Set As"
                                        HorizontalAlignment="Center"
                                        Command="{Binding ElementName=Page, Path=DataContext.SetScrumMasterCommand}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding ElementName=Page, Path=DataContext.Permissions.Manager, Converter={StaticResource BoolToVisConverter}}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Visibility="{Binding Roles.ProductOwner, Converter={StaticResource BoolToVisConverter}}">
                                <TextBlock Text="Product Owner" HorizontalAlignment="Right" FontWeight="Bold" FontSize="12"/>
                                <Button Content="Set As"
                                        HorizontalAlignment="Right"
                                        Command="{Binding ElementName=Page, Path=DataContext.SetProductOwnerCommand}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding ElementName=Page, Path=DataContext.Permissions.Manager, Converter={StaticResource BoolToVisConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
