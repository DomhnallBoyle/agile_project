<Page x:Class="CSC3045_CS2.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSC3045_CS2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Register">

    <StackPanel>
        <TextBlock Text="Registration" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,10,0,10"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="20,0,0,0" HorizontalAlignment="Center" >
                <TextBlock Text="Username" Grid.Column="0" FontSize="14" />
                <TextBlock Text="First name" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
                <TextBlock Text="Surname" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
                <TextBlock Text="Email" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
                <TextBlock Text="Password" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
                <TextBlock Text="Confirm Password" Grid.Column="0" FontSize="14" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                <TextBox Name="UsernameTextBox" />
                <TextBox  Name ="FirstnameTextBox" Margin="0,10,0,0"/>
                <TextBox  Name ="SurnameTextBox" Margin="0,10,0,0"/>
                <TextBox  Name ="EmailTextBox" Margin="0,10,0,0"/>
                <PasswordBox Name="PasswordTextBox"  Margin="0,10,0,0" />
                <PasswordBox Name="ConfirmPasswordTextBox" Margin="0,10,0,0" ToolTip="Passwords Must Match"/>

               
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="BackButton" Margin="10 ,10 ,10 ,10"  Grid.Column="0" Background="Red"  Content="Back"/>
            <Button Name ="RegisterButton" Margin="10 ,10 ,10 ,10"  Grid.Column="1" Background="Green" Content="Register" Click="RegisterButton_Click"/>
        </Grid>
    </StackPanel>

</Page>
