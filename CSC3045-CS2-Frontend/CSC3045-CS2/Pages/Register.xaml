<Page x:Class="CSC3045_CS2.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSC3045_CS2.Pages"
      mc:Ignorable="d" 
      Background="{StaticResource LightBlueBrush}"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Register">

    <StackPanel>
        <TextBlock Name="PageTitle" Text="Registration" Style="{StaticResource Title}" HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="20,0,0,0" HorizontalAlignment="Center" >
                <TextBlock Text="Email" Grid.Column="0" Margin="0,10,0,0"/>
                <TextBlock Text="First name" Grid.Column="0" Margin="0,10,0,0"/>
                <TextBlock Text="Surname" Grid.Column="0" Margin="0,10,0,0"/>
                <TextBlock Text="Password" Grid.Column="0" Margin="0,10,0,0"/>
                <TextBlock Text="Confirm Password" Grid.Column="0" Margin="0,10,0,0"/>
                <TextBlock Text="Role" Grid.Column="0" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                <TextBox Name="EmailTextBox" Margin="0,10,0,0"/>
                <TextBox Name="FirstnameTextBox" Margin="0,10,0,0"/>
                <TextBox Name="SurnameTextBox" Margin="0,10,0,0"/>
                <PasswordBox Name="PasswordTextBox" Margin="0,10,0,0" />
                <PasswordBox Name="ConfirmPasswordTextBox" Margin="0,10,0,0" ToolTip="Passwords Must Match"/>

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <CheckBox Name="ProductOwnerCheckBox" Grid.Column="0" Grid.Row="0" Margin="0,5" HorizontalAlignment="Left">Product Owner</CheckBox>
                    <CheckBox Name="ScrumMasterCheckBox" Grid.Column="1" Grid.Row="0" Margin="0,5" HorizontalAlignment="Right">Scrum Master</CheckBox>
                    <CheckBox Name="DeveloperCheckBox" Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" Margin="0,5">Developer</CheckBox>

                </Grid>
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="BackButton" Margin="10,10,10,10" Grid.Column="0" Content="Back" Command="{Binding BackCommand}"/>
            <Button Name="RegisterButton" Margin="10,10,10,10" Grid.Column="1" Content="Register" Click="RegisterButton_Click"/>
        </Grid>
    </StackPanel>

</Page>
