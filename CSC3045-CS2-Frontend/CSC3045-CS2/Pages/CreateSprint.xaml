<Page x:Class="CSC3045_CS2.Pages.CreateSprint"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSC3045_CS2.Pages"
      mc:Ignorable="d" 
      Background="{StaticResource LightBlueBrush}"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CreateSprint">

    <StackPanel>
        <TextBlock Name="PageTitle" Text="Create Sprint" Style="{StaticResource Title}" HorizontalAlignment="Center" Margin="0,10,0,25"/>

        <TextBlock Text="Sprint Start Date" Style="{StaticResource Label}"/>
        <DatePicker Name="StartDatePicker"/>

        <TextBlock Text="Sprint End Date" Style="{StaticResource Label}" Margin="0,15,0,0"/>
        <DatePicker Name="EndDatePicker"/>

        <Grid Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Cancel" Style="{StaticResource StandardButton}" Command="{Binding CancelCommand}"/>
            <Button Grid.Column="1" Content="Create" Style="{StaticResource StandardButton}" Command="{Binding CreateCommand}"/>
        </Grid>
        
    </StackPanel>
</Page>
