<Page x:Class="CSC3045_CS2.Pages.UserDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSC3045_CS2.Pages"
      mc:Ignorable="d"
      Title="UserDashboard" Height="475.182" Width="456.569">

    <StackPanel>
        <StackPanel>
            <TextBlock Text="User Dashboard" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
        
        <StackPanel Background="CadetBlue">
            <TextBlock FontSize ="14" Text="{Binding UserLabel}" HorizontalAlignment="Left" />
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Visible" Height="100">
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="ProjectNamePanel" Margin="10,0,0,2">
                </StackPanel>
                <StackPanel Name="DetailsPanel" Grid.Column="1">
                </StackPanel>
                <StackPanel Name="ButtonPanel" Grid.Column="2" Margin="10,0,10,0">
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel>
            <Button Content="{Binding CreateProjectButtonLabel, FallbackValue='Create Project'}" HorizontalAlignment="Center" Command="{Binding NavigateToCreateProjectCommand}"/>
            <Button Content="{Binding LogoutButtonLabel, FallbackValue='Logout'}" HorizontalAlignment="Left" Command="{Binding LogoutCommand}"/>
        </StackPanel>
    </StackPanel>
</Page>
