<Page x:Class="CSC3045_CS2.Pages.CreateProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSC3045_CS2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CreateProject">


    <StackPanel>
        <TextBlock Text="{Binding TitleLabel, FallbackValue='Create A Project'}" HorizontalAlignment="Center" Margin="0,10,0,25"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <TextBlock Text="{Binding ProjectManagerLabel, FallbackValue='Project Manager:'}" HorizontalAlignment="Right" Margin="0,0,0,15"/>
                <TextBlock Text="{Binding ProjectNameLabel, FallbackValue=Project Name:}" HorizontalAlignment="Right" Margin="0,0,-1,15" Width="91"/>
                <TextBlock Text="{Binding DescriptionLabel, FallbackValue=Description:}" HorizontalAlignment="Right" Width="90"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="12,0,25,0">
                <TextBlock Text="{Binding ProjectManagerNameLabel, FallbackValue='blank'}" HorizontalAlignment="Left" Margin="0,0,0,15" />
                <TextBox Text="{Binding ProjectNameTextContent}"  MaxLength="25" MaxWidth="125" MinWidth="125" HorizontalAlignment="Left" Margin="0,1,0,15"/>
                <TextBox Text="{Binding DescriptionTextContent}"  MaxLength="25" MaxWidth="125" MinWidth="125" HorizontalAlignment="Left" Margin="0,0,0,15"  Height="66" Width="113"/>
            </StackPanel>
        </Grid>

        <StackPanel Margin="0,20,0,20">
            <Button Content="{Binding CreateButtonText, FallbackValue='Create'}" HorizontalAlignment="Center" Margin="0,10,-15,15" Command="{Binding LoginCommand}"/>
        </StackPanel>

    </StackPanel>
</Page>
